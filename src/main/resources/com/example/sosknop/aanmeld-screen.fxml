<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sosknop.Aanmeld">

   <children>

      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="135.0" layoutY="22.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@image/Logo.png" />
         </image>
      </ImageView>

      <Label layoutX="32.0" layoutY="190.0" text="Voornaam" />
      <TextField fx:id="voornaam" layoutX="32.0" layoutY="210.0" prefHeight="25.0" prefWidth="330.0" promptText="Vul hier voornaam in..." />

      <Label layoutX="32.0" layoutY="250.0" text="Tussenvoegsel" />
      <TextField fx:id="tussenvoegsels" layoutX="32.0" layoutY="270.0" prefHeight="25.0" prefWidth="330.0" promptText="Vul hier tussenvoegsel in..." />

      <Label layoutX="32.0" layoutY="310.0" text="Achternaam" />
      <TextField fx:id="achternaam" layoutX="32.0" layoutY="330.0" prefHeight="25.0" prefWidth="330.0" promptText="Vul hier achternaam in..." />

      <Label layoutX="32.0" layoutY="370.0" text="Telefoon nummer" />
      <TextField fx:id="telefoon" layoutX="32.0" layoutY="390.0" prefHeight="25.0" prefWidth="330.0" promptText="Vul je telefoon in..." />

      <Label layoutX="32.0" layoutY="430.0" text="E-mailadres" />
      <TextField fx:id="email" layoutX="35.0" layoutY="450.0" prefHeight="25.0" prefWidth="330.0" promptText="Vul je email in..." />

      <Label layoutX="32.0" layoutY="490.0" text="Wachtwoord" />
      <PasswordField fx:id="wachtwoord" layoutX="32.0" layoutY="510.0" prefHeight="25.0" prefWidth="330.0" promptText="Voer hier uw wavhtwoord in..." />

      <Label layoutX="32.0" layoutY="550.0" text="Bevestig wachtwoord" />
      <PasswordField fx:id="herhaalwachtwoord" layoutX="33.0" layoutY="570.0" prefHeight="25.0" prefWidth="330.0" promptText="Bevestig hier uw wavhtwoord..." />

      <Button layoutX="141.0" layoutY="620.0" mnemonicParsing="false" onAction="#switchToHome" text="Account aanmaken" />

      <Label layoutX="93.0" layoutY="656.0" text="Heeft u al een account ? " />
      <Button layoutX="246.0" layoutY="653.0" mnemonicParsing="false" onAction="#switchToLogin" text="Login" />

   </children>
</AnchorPane>